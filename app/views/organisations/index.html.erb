<p id="notice"><%= notice %></p>

<h1>Management</h1>

<p>Logged in as <%= current_user.name %> <%= link_to('Logout', destroy_user_session_path, method: :delete) %></p>

<h3>Organisations</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.name %></td>
        <td><%= link_to 'Show', organisation %></td>
        <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Create Organisation</h3>

<%= render 'form', organisation: @organisation %>

